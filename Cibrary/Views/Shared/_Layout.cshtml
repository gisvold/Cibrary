<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CIBRARY - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CIBRARY", "Index", "Book", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Søk", "Index", "Book")</li>
                        <li>@Html.ActionLink("Ny Bok ", "Create", "Book")</li>
                        <li>@Html.ActionLink("Lånte bøker", "Index", "Loan")</li>
                        <li>@Html.ActionLink("legge til categori", "Index", "Category")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <div id="Ciber_logo" style="text-align: center;" >
                <img src="@Url.Content("~/img/CIBER_logo.png")" />
                <p>&copy; @DateTime.Now.Year - Ciber Norge AS</p>
            </div>
                
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

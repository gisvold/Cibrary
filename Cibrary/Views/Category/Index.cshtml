@model IEnumerable<Cibrary.Models.Category>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id=item.CategoryId }) |
            @Html.ActionLink("Slett", "Delete", new { id=item.CategoryId }) 
        </td>
    </tr>
}

</table>


